<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Loader/loader.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    @*<style>
        body {
            background-image: url('../../Dumps/background_img.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
       
    </style>*@
</head>
<body>
    <div class="loader">Processing...</div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Sugar Bliss Delight", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    
                    
                    

                </ul>

                <ul class="navbar-nav" style="float:right !important">
                    @if (Session["Username"] != null)
                    {
                        <li><p style="color:#fff; margin-top:17px"><i class="bi bi-person-circle mr-1"> Hello @Session["Username"]</i></p></li>
                        <li style="color:#fff; margin-top:10px">@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                    else
                    {
                        @*<li style="color:#fff; margin-top:10px">@Html.ActionLink("Add Item", "Index", "Items", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li style="color:#fff; margin-top:10px">@Html.ActionLink("Signup", "Signup", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="color:#fff; margin-top:10px">@Html.ActionLink("Admin Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li style="color:#fff; margin-top:10px">@Html.ActionLink("User Login", "UserLogin", "Account", new { area = "" }, new { @class = "nav-link" })</li>

                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Loader/loader.js"></script>
</body>
</html>